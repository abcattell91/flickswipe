
<h1>My profile</h1>

<%= @user.first_name %></h1>
<h5><%= @user.email%></h5>

<h2>List of other users</h2>
<ol>
<% @users.each do |user| %>
    <li> <%= user.first_name %></li>
      <% if @friendships.select { |friendship| friendship.contact == user}.length > 0 %>
     <%= link_to "Friends", friendships_path(contact_id: user.id, initiator_id: @user.id) , class: "btn btn-sm btn-success", method: :post %>
     <% else %>
    <%= link_to "Add friend", friendships_path(contact_id: user.id, initiator_id: @user.id) , class: "btn btn-sm btn-success", method: :post %>
    <% end %>
    <% end %>
  </ol>
<%= link_to 'Friendships', friendships_path  %>
