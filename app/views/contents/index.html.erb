    <ul id="slides">
      <% @contents.shuffle.each_with_index do |content, i| %>
      <li class="slide" data-id="<%= content.id %>" data-content-title="<%= content.title %>">
        <div class="image-carousel" style="background-image: url('<%= content.poster %>')">
        </div>
        <button class="modal-btn"><i class='fas fa-info-circle fa-3x'></i></button>
          <div class="movie-modal <%= content.id %>">
            <div class="movie-modal-header">
              <div class="movie-rating" style="">Average rating: <strong><%= content.rating %></strong></div>
              <button class="close-button">&times;</button>
            </div>
            <div class="movie-modal-body"><p><%= content.description %></p></div>
          </div>
          <div class="overlay <%= content.id %>"></div>
      </li>
      <% end %>
    </ul>

  <div id="slide-controls">
    <span id="decline"><i class="fa fa-solid fa-thumbs-down fa-2x"></i></span>
    <span id="approve"><i class="fa fa-solid fa-thumbs-up fa-2x"></i></span>
  </div>

  <div id="users-ids" data-current-user-id="<%= current_user.id %>" data-friendship-user-id="<%=@friendship_id %>" data-contact-id="<%= @contact_id %>">
